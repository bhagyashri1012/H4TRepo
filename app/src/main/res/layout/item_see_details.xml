<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"              xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"              android:orientation="vertical"              android:layout_width="match_parent"              android:layout_height="wrap_content"              android:layout_margin="@dimen/activity_vertical_margin">    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"                  android:orientation="horizontal"                  android:gravity="center_vertical"                  android:layout_marginBottom="@dimen/activity_vertical_margin_half">        <ImageView                android:id="@+id/imv_airline"                android:layout_width="@dimen/imv_width"                android:layout_height="@dimen/imv_width"                android:layout_marginRight="@dimen/activity_vertical_margin_half"                android:adjustViewBounds="true"                app:srcCompat="@mipmap/ic_to_city"/>        <LinearLayout                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:orientation="vertical">            <TextView android:id="@+id/trip_title"                      style="@style/CustomRegularTextView"                      android:layout_weight="1"                      tools:text="KLM Royal Dutch KL 3696"                      android:layout_marginBottom="@dimen/margin_4dp"                      android:maxLines="2"            />            <TextView android:id="@+id/txt_airline"                      style="@style/CustomSmallTextView"                      tools:text="operated by jet airways"                      android:maxLines="2"                      android:layout_weight="1"                      android:textColor="@color/slate_grey"                      android:textAlignment="viewEnd"                      android:gravity="right|end"            />        </LinearLayout>    </LinearLayout>    <LinearLayout android:layout_width="match_parent"                  android:layout_height="wrap_content"                  android:orientation="vertical">        <LinearLayout                android:id="@+id/ll_main"                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:layout_marginBottom="@dimen/activity_vertical_margin_half"                android:orientation="horizontal"                android:weightSum="1"        >            <LinearLayout                    android:layout_weight=".4"                    android:layout_width="0dp"                    android:layout_height="wrap_content"                    android:gravity="center"                    android:orientation="vertical"            >                <TextView android:id="@+id/tv_destination"                          style="@style/CustomMediumTextView"                          android:layout_marginBottom="@dimen/activity_vertical_margin_half"                          tools:text="BOM  2.14  AM"                          android:maxLines="2"                />                <TextView android:id="@+id/tv_date"                          style="@style/CustomSmallTextView"                          tools:text="2.14am - 4.25am"                          android:textColor="@color/slate_grey"                          android:layout_marginBottom="@dimen/margin_2dp"                          android:maxLines="2"                />                <TextView android:id="@+id/tv_location"                          style="@style/CustomSmallTextView"                          android:textAlignment="center"                          android:textColor="@color/slate_grey"                          tools:text="Pune Airport"                          android:maxLines="3"                />                <TextView android:id="@+id/tv_city"                          style="@style/CustomSmallTextView"                          android:textAlignment="center"                          android:textColor="@color/slate_grey"                          tools:text="Pune"                          android:maxLines="2"                          android:layout_marginBottom="@dimen/margin_4dp"                />            </LinearLayout>            <LinearLayout                    android:layout_weight=".2"                    android:layout_width="0dp"                    android:layout_height="wrap_content"                    android:layout_marginLeft="@dimen/margin_2dp"                    android:layout_marginRight="@dimen/margin_2dp"                    android:layout_gravity="center"                    android:gravity="center_horizontal"                    android:orientation="vertical">                <ImageView                        android:layout_width="wrap_content"                        android:layout_height="wrap_content"                        android:adjustViewBounds="true"                        android:layout_margin="@dimen/margin_2dp"                        android:src="@drawable/clock"/>                <TextView                        android:id="@+id/tv_waiting_duration"                        style="@style/CustomSmallTextView"                        android:layout_width="wrap_content"                        android:gravity="center_horizontal"                        android:textColor="@color/slate_grey"                        tools:text="( 2hr 5min )"                />            </LinearLayout>            <LinearLayout                    android:layout_weight=".4"                    android:layout_width="0dp"                    android:layout_height="wrap_content"                    android:gravity="center"                    android:orientation="vertical"            >                <TextView android:id="@+id/tv_out_bound_destination"                          style="@style/CustomMediumTextView"                          android:layout_marginBottom="@dimen/activity_vertical_margin_half"                          android:text="PNQ 2.14  AM "                          android:maxLines="2"                />                <TextView android:id="@+id/tv_out_bound_date"                          style="@style/CustomSmallTextView"                          android:layout_marginBottom="@dimen/margin_2dp"                          android:text="2.14am - 4.25am"                          android:textColor="@color/slate_grey"                          android:maxLines="2"                />                <TextView android:id="@+id/tv_out_bound_location"                          style="@style/CustomSmallTextView"                          tools:text="Spice jet"                          android:textColor="@color/slate_grey"                          android:textAlignment="center"                          android:maxLines="3"                />                <TextView android:id="@+id/tv_out_bound_city"                          style="@style/CustomSmallTextView"                          android:textAlignment="center"                          android:textColor="@color/slate_grey"                          tools:text="Pune"                          android:maxLines="2"                          android:layout_marginBottom="@dimen/margin_4dp"                />            </LinearLayout>        </LinearLayout>        <TextView                android:id="@+id/tv_layover"                style="@style/CustomSmallTextView"                android:layout_width="wrap_content"                android:layout_gravity="center_horizontal"                tools:text="Layover-2hr 5min"                android:layout_marginBottom="@dimen/margin_2dp"        />    </LinearLayout>    <View            style="@style/Divider"            android:layout_gravity="center_vertical"            android:layout_weight="1"            android:layout_width="match_parent"            android:background="@color/white_grey"/></LinearLayout>