<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginRight="@dimen/activity_vertical_margin"
              android:layout_marginLeft="@dimen/activity_vertical_margin"
              android:layout_marginTop="@dimen/activity_vertical_margin">
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:gravity="center_vertical"
                  android:layout_marginBottom="@dimen/activity_vertical_margin_half">
        <ImageView
                android:id="@+id/imv_airline"
                android:layout_width="@dimen/imv_width"
                android:layout_height="@dimen/imv_width"
                android:layout_marginRight="@dimen/activity_vertical_margin_half"
                android:adjustViewBounds="true"
                app:srcCompat="@mipmap/ic_to_city"/>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <TextView android:id="@+id/trip_title"
                      style="@style/CustomRegularTextView"
                      android:layout_weight="1"
                      tools:text="KLM Royal Dutch KL 3696"
                      android:layout_marginBottom="@dimen/margin_4dp"
                      android:maxLines="2"
            />
            <TextView android:id="@+id/txt_airline"
                      style="@style/CustomSmallTextView"
                      tools:text="operated by jet airways"
                      android:maxLines="2"
                      android:layout_weight="1"
                      android:textColor="@color/slate_grey"
                      android:textAlignment="viewEnd"
                      android:gravity="right|end"
            />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:orientation="vertical">
        <LinearLayout
                android:id="@+id/ll_main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/activity_vertical_margin_half"
                android:orientation="horizontal"
                android:weightSum="1"
        >
            <LinearLayout
                    android:layout_weight=".45"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
            >

                <TextView android:id="@+id/tv_destination"
                          style="@style/CustomLargeTextView"
                          android:layout_marginBottom="@dimen/activity_vertical_margin_half"
                          tools:text="BOM  2.14am"
                          android:maxLines="2"
                />
                <TextView android:id="@+id/tv_date"
                          style="@style/CustomSmallTextView"
                          tools:text="2.14am - 4.25am"
                          android:textColor="@color/slate_grey"
                          android:maxLines="2"
                />
                <TextView android:id="@+id/tv_location"
                          style="@style/CustomSmallTextView"
                          android:textColor="@color/slate_grey"
                          tools:text="Spice jet"
                          android:maxLines="2"
                />
            </LinearLayout>

            <LinearLayout
                    android:layout_weight=".1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_2dp"
                    android:layout_gravity="center"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:layout_margin="@dimen/margin_2dp"
                        android:src="@android:drawable/ic_lock_idle_alarm"/>
                <TextView
                        android:id="@+id/tv_duration"
                        style="@style/CustomSmallTextView"
                        android:layout_width="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="( 2hr 5min )"
                        android:layout_marginBottom="@dimen/margin_4dp"
                />
            </LinearLayout>
            <LinearLayout
                    android:layout_weight=".45"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
            >

                <TextView android:id="@+id/tv_out_bound_destination"
                          style="@style/CustomLargeTextView"
                          android:layout_marginBottom="@dimen/activity_vertical_margin_half"
                          android:text="BOM-PNQ "
                          android:maxLines="2"
                />
                <TextView android:id="@+id/tv_out_bound_date"
                          style="@style/CustomSmallTextView"
                          android:text="2.14am - 4.25am"
                          android:textColor="@color/slate_grey"
                          android:maxLines="2"
                />
                <TextView android:id="@+id/tv_out_bound_location"
                          style="@style/CustomSmallTextView"
                          android:text="Spice jet"
                          android:textColor="@color/slate_grey"
                          android:maxLines="2"
                />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <View
            style="@style/Divider"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:background="@color/white_grey"/>
</LinearLayout>