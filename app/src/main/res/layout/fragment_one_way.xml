<?xml version="1.0" encoding="utf-8"?><LinearLayout        xmlns:android="http://schemas.android.com/apk/res/android"        android:layout_height="match_parent"        android:layout_width="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"        android:layout_margin="@dimen/activity_vertical_margin"        android:orientation="vertical">    <include layout="@layout/search_layout"/>    <RelativeLayout            android:layout_width="match_parent"            android:layout_height="match_parent">    <android.support.v7.widget.RecyclerView            android:id="@+id/recycler_view_one_way"            android:layout_width="match_parent"            android:layout_height="wrap_content"    />    <RelativeLayout            android:id="@+id/flight_not_found"            android:layout_width="match_parent"            android:visibility="gone"            android:padding="@dimen/activity_vertical_margin_half"            android:layout_height="wrap_content">        <ImageView                android:id="@+id/imv_flight_not_found"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_margin="@dimen/activity_vertical_margin_half"                android:background="@drawable/flight_not_found9"        ></ImageView>        <TextView style="@style/CustomRegularTextView"                  android:text="@string/flight_not_found9"                  android:textColor="@color/colorPrimary"                  android:layout_below="@+id/imv_flight_not_found"                  android:layout_centerHorizontal="true"/>    </RelativeLayout>        <com.wang.avi.AVLoadingIndicatorView                android:id="@+id/circularProgressBar"                android:layout_width="@dimen/loader_dimin"                android:layout_height="@dimen/loader_dimin"                android:layout_centerInParent="true"                android:visibility="gone"                android:background="@color/white_pure"                app:indicatorColor="@color/colorPrimary"                app:indicatorName="BallSpinFadeLoaderIndicator"        />    </RelativeLayout></LinearLayout>