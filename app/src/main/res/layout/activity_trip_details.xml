<?xml version="1.0" encoding="utf-8"?><RelativeLayout        xmlns:android="http://schemas.android.com/apk/res/android"        xmlns:tools="http://schemas.android.com/tools"        android:layout_height="match_parent" android:layout_width="match_parent"        android:orientation="vertical">    <include layout="@layout/common_toolbar"/>    <ScrollView            android:layout_width="match_parent"            android:layout_height="match_parent"            android:layout_marginBottom="?attr/actionBarSize"            android:fillViewport="true"            android:fadingEdge="none"            android:layout_below="@+id/rl_toolbar">        <LinearLayout                android:layout_width="match_parent"                android:layout_height="match_parent"                android:orientation="vertical"                android:weightSum="1"        >            <android.support.v7.widget.RecyclerView                    android:id="@+id/recycler_view"                    android:layout_width="match_parent"                    android:layout_height="wrap_content"                    android:nestedScrollingEnabled="false"/>            <LinearLayout                    android:id="@+id/ll_final_data"                    android:layout_width="match_parent"                    android:layout_height="wrap_content"                    android:layout_margin="@dimen/margin_16dp"                    android:orientation="vertical">                <LinearLayout                        android:layout_width="match_parent"                        android:layout_height="wrap_content"                        android:layout_marginRight="@dimen/margin_4dp"                        android:orientation="horizontal"                        android:weightSum="2"                >                    <TextView style="@style/CustomRegularTextView"                              android:text="@string/passenger"                              android:layout_marginBottom="@dimen/margin_4dp"                              android:maxLines="2"                              android:layout_weight="1"                    />                    <TextView                            android:id="@+id/tv_details_passengers"                            style="@style/CustomRegularTextView"                            tools:text="3 Adults"                            android:layout_weight="1"                            android:gravity="right"                            android:textColor="@color/cool_grey"                            android:maxLines="2"                    />                </LinearLayout>                <LinearLayout                        android:layout_width="match_parent"                        android:layout_height="wrap_content"                        android:layout_marginRight="@dimen/margin_4dp"                        android:orientation="horizontal"                        android:weightSum="2"                >                    <TextView style="@style/CustomRegularTextView"                              android:text="Class"                              android:layout_marginBottom="@dimen/margin_4dp"                              android:maxLines="2"                              android:layout_weight="1"                    />                    <TextView android:id="@+id/tv_details_class"                              style="@style/CustomRegularTextView"                              tools:text="Economy Class"                              android:textColor="@color/cool_grey"                              android:maxLines="2"                              android:layout_weight="1"                              android:gravity="right"                    />                </LinearLayout>                <LinearLayout                        android:layout_width="match_parent"                        android:layout_height="wrap_content"                        android:layout_marginRight="@dimen/margin_4dp"                        android:orientation="horizontal"                        android:weightSum="2"                >                    <TextView style="@style/CustomRegularTextView"                              android:text="Price"                              android:layout_marginBottom="@dimen/margin_4dp"                              android:maxLines="2"                              android:layout_weight="1"                    />                    <TextView                            android:id="@+id/tv_details_price"                            style="@style/CustomRegularTextView"                            tools:text="$2500"                            android:textColor="@color/cool_grey"                            android:maxLines="2"                            android:layout_weight="1"                            android:gravity="right"                    />                </LinearLayout>            </LinearLayout>        </LinearLayout>    </ScrollView>    <LinearLayout            android:id="@+id/ll_footer"            android:layout_width="match_parent"            android:layout_height="?attr/actionBarSize"            android:orientation="horizontal"            android:background="?attr/colorPrimary"            android:elevation="4dp"            android:gravity="center_vertical"            android:paddingRight="@dimen/activity_vertical_margin_half"            android:paddingLeft="@dimen/activity_vertical_margin"            android:weightSum="2.5"            android:layout_alignParentBottom="true"    >        <TextView android:id="@+id/tv_total_deals"                  style="@style/WhiteRegularTextView"                  tools:text="2 Deals from"                  android:layout_weight="1"                  android:layout_marginRight="@dimen/padding_8dp"                  android:maxLines="2"        />        <TextView android:id="@+id/tv_price"                  style="@style/WhiteRegularTextView"                  tools:text="$25000"                  android:layout_weight="1"                  android:maxLines="2"        />        <Button android:id="@+id/btn_continue_booking"                style="@style/CustomButtonGreen"                android:text="Continue Booking"                android:layout_weight=".5"                android:layout_gravity="right|center_vertical"        />    </LinearLayout></RelativeLayout>