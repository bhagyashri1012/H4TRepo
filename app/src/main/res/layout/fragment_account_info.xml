<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:fillViewport="true"
        android:fadingEdge="none"
        android:scrollbars="none"
        android:overScrollMode="never"
        android:background="@drawable/home_bg"
>
    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="@dimen/activity_vertical_margin">
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_margin="@dimen/activity_vertical_margin"
                      android:orientation="vertical">

            <android.support.v7.widget.CardView
                    android:id="@+id/cv_personal_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@android:color/white"
                    app:cardCornerRadius="@dimen/corner_radius"
                    app:cardMaxElevation="@dimen/max_elevation"
                    app:cardElevation="0.7dp"
                    app:contentPadding="@dimen/content_padding"
                    app:contentPaddingBottom="@dimen/content_padding"
                    android:layout_gravity="center_vertical"
                    app:cardPreventCornerOverlap="true"
                    app:cardUseCompatPadding="true">
                <TextView
                        style="@style/CustomLargeTextView"
                        android:text="@string/personal_information"
                        android:textColor="@color/colorPrimary"
                        android:padding="@dimen/padding_8dp"/>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                    android:id="@+id/cv_change_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@android:color/white"
                    app:cardCornerRadius="@dimen/corner_radius"
                    app:cardMaxElevation="@dimen/max_elevation"
                    app:cardElevation="0.7dp"
                    app:contentPadding="@dimen/content_padding"
                    app:contentPaddingBottom="@dimen/content_padding"
                    android:layout_gravity="center_vertical"
                    app:cardPreventCornerOverlap="true"
                    app:cardUseCompatPadding="true">
                <TextView
                        style="@style/CustomLargeTextView"
                        android:text="@string/change_password"
                        android:textColor="@color/colorPrimary"
                        android:padding="@dimen/padding_8dp"/>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                    android:id="@+id/cv_payment_methods"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@android:color/white"
                    app:cardCornerRadius="@dimen/corner_radius"
                    app:cardMaxElevation="@dimen/max_elevation"
                    app:cardElevation="0.7dp"
                    app:contentPadding="@dimen/content_padding"
                    app:contentPaddingBottom="@dimen/content_padding"
                    android:layout_gravity="center_vertical"
                    app:cardPreventCornerOverlap="true"
                    app:cardUseCompatPadding="true">
                <TextView
                        style="@style/CustomLargeTextView"
                        android:text="@string/payment_methods"
                        android:textColor="@color/colorPrimary"
                        android:padding="@dimen/padding_8dp"/>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                    android:id="@+id/cv_connected_account"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@android:color/white"
                    app:cardCornerRadius="@dimen/corner_radius"
                    app:cardMaxElevation="@dimen/max_elevation"
                    app:cardElevation="0.7dp"
                    app:contentPadding="@dimen/content_padding"
                    app:contentPaddingBottom="@dimen/content_padding"
                    android:layout_gravity="center_vertical"
                    app:cardPreventCornerOverlap="true"
                    app:cardUseCompatPadding="true">
                <TextView
                        style="@style/CustomLargeTextView"
                        android:text="@string/conn_account"
                        android:textColor="@color/colorPrimary"
                        android:padding="@dimen/padding_8dp"/>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                    android:id="@+id/cv_passport"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@android:color/white"
                    app:cardCornerRadius="@dimen/corner_radius"
                    app:cardMaxElevation="@dimen/max_elevation"
                    app:cardElevation="0.7dp"
                    app:contentPadding="@dimen/content_padding"
                    app:contentPaddingBottom="@dimen/content_padding"
                    android:layout_gravity="center_vertical"
                    app:cardPreventCornerOverlap="true"
                    app:cardUseCompatPadding="true">
                <TextView
                        style="@style/CustomLargeTextView"
                        android:text="@string/passport"
                        android:textColor="@color/colorPrimary"
                        android:padding="@dimen/padding_8dp"/>
            </android.support.v7.widget.CardView>


        </LinearLayout>
    </RelativeLayout>
</ScrollView>
