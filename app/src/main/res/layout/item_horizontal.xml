<?xml version="1.0" encoding="utf-8"?><android.support.v7.widget.CardView        xmlns:android="http://schemas.android.com/apk/res/android"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:layout_marginRight="@dimen/padding_8dp"        android:orientation="horizontal">    <LinearLayout            android:layout_width="120dp"            android:layout_height="150dp"            android:gravity="center"            android:orientation="vertical">        <ImageView                android:id="@+id/imv_deals"                android:layout_width="wrap_content"                android:layout_height="match_parent"                android:scaleType="fitXY"                android:src="@drawable/image1"/>        <TextView                android:id="@+id/title"                style="@style/CustomRegularTextView"                android:gravity="center"                android:maxLines="2"        />    </LinearLayout></android.support.v7.widget.CardView>