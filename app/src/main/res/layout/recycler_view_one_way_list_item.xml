<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_margin="@dimen/activity_vertical_margin"
>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_vertical_margin_half"
            android:orientation="horizontal"
            android:weightSum="1"
    >
        <LinearLayout
                android:layout_weight=".2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">
            <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:orientation="vertical">
                <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@mipmap/ic_launcher"
                        android:layout_marginBottom="@dimen/padding_8dp"
                />
                <TextView style="@style/CustomRegularTextView"
                          android:text="IndiGo"
                          android:layout_gravity="center_horizontal"
                          android:layout_marginBottom="@dimen/margin_4dp"
                          android:maxLines="2"
                />
            </LinearLayout>
            <View android:layout_width="1dp"
                  android:layout_height="match_parent"
                  android:background="@color/warm_grey"
                  android:layout_marginLeft="@dimen/activity_vertical_margin_half"
                  android:layout_marginRight="@dimen/activity_vertical_margin_half"
            />

        </LinearLayout>
        <LinearLayout
                android:id="@+id/ll_second"
                android:layout_weight=".2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin_4dp"
                android:layout_toRightOf="@+id/ll_first"
                android:orientation="vertical"
        >

            <TextView style="@style/CustomRegularTextView"
                      android:text="Pune(PNQ)"
                      android:layout_marginBottom="@dimen/margin_16dp"
                      android:maxLines="2"
            />
            <TextView style="@style/CustomRegularTextView"
                      android:text="10.30Am"
                      android:textColor="@color/cool_grey"
                      android:maxLines="2"
            />
        </LinearLayout>
        <LinearLayout
                android:layout_weight=".2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">
            <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:orientation="vertical">
                <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@mipmap/ic_launcher"
                        android:layout_marginBottom="@dimen/padding_8dp"
                />
                <TextView style="@style/CustomRegularTextView"
                          android:text="IndiGo"
                          android:layout_gravity="center_horizontal"
                          android:layout_marginBottom="@dimen/margin_4dp"
                />
            </LinearLayout>
            <View android:layout_width="1dp"
                  android:layout_height="match_parent"
                  android:background="@color/warm_grey"
                  android:layout_marginLeft="@dimen/activity_vertical_margin_half"
                  android:layout_marginRight="@dimen/activity_vertical_margin_half"
            />

        </LinearLayout>

        <LinearLayout
                android:layout_weight=".2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin_4dp"
                android:layout_toRightOf="@+id/ll_first"
                android:orientation="vertical"
        >

            <TextView style="@style/CustomRegularTextView"
                      android:text="Mumbai(BOM)"
                      android:layout_marginBottom="@dimen/margin_16dp"
                      android:maxLines="2"
            />
            <TextView style="@style/CustomRegularTextView"
                      android:text="10.30Am"
                      android:textColor="@color/cool_grey"
                      android:maxLines="2"
            />
        </LinearLayout>

        <LinearLayout
                android:layout_weight=".2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_toRightOf="@+id/ll_second"
                android:layout_alignParentRight="true"
                android:orientation="vertical"
        >

            <TextView
                    android:id="@+id/list_item"
                    android:text="$8,000 $"
                    android:textColor="@android:color/holo_blue_light"
                    android:maxLines="2"
                    style="@style/CustomRegularTextView"/>
        </LinearLayout>
    </LinearLayout>

    <View
            android:id="@+id/separator"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/activity_vertical_margin_half"
            android:background="@color/cool_grey"/>
</LinearLayout>