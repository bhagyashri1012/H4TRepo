<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"              xmlns:tools="http://schemas.android.com/tools"              xmlns:app="http://schemas.android.com/apk/res-auto"              android:layout_width="match_parent"              android:layout_height="wrap_content"              android:orientation="vertical">    <TextView            android:id="@+id/list_item"            style="@style/CustomRegularTextView"            android:maxLines="2"            android:padding="@dimen/margin_16dp"            android:gravity="center_vertical"            android:layout_centerVertical="true"            android:ellipsize="end"            tools:text="Mumbai"/>    <TextView            android:id="@+id/list_sub_item"            style="@style/CustomRegularTextView"            android:maxLines="1"            android:visibility="gone"            android:paddingLeft="@dimen/margin_16dp"            android:paddingRight="@dimen/margin_16dp"            android:gravity="center_vertical"            android:layout_centerVertical="true"            android:ellipsize="end"            android:textColor="@color/cool_grey"            tools:text="India"/>    <ImageView            android:id="@+id/iv_tick"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_alignParentRight="true"            android:layout_centerVertical="true"            android:layout_marginRight="@dimen/margin_16dp"            android:visibility="gone"            app:srcCompat="@drawable/ic_date_range"/>    <LinearLayout            android:layout_width="match_parent"            android:layout_height="1dp"            android:background="@color/white_grey"/></LinearLayout>