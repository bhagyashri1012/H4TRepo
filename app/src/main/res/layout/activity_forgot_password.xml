<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent" android:layout_height="match_parent"
              android:gravity="center_horizontal"
              android:orientation="vertical"
              android:background="@color/white_pure"
              tools:context="com.usit.hub4tickets.registration.ui.SignUpActivity">

    <include layout="@layout/common_toolbar"/>
    <!-- Login progress -->
    <ProgressBar
            android:id="@+id/login_progress"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:visibility="gone"/>

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/height_48"
    >

        <RelativeLayout android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/activity_vertical_margin"
        >
            <ImageView
                    android:id="@+id/imv_logo"
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/image"/>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:layout_below="@+id/imv_logo"
                    android:orientation="vertical">

                <android.support.design.widget.TextInputLayout
                        app:hintTextAppearance="@style/TextAppearance.TextInputLayout.Black"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    <EditText
                            android:id="@+id/edt_email_forgot_password"
                            android:layout_width="match_parent"
                            style="@style/CustomRegularTextView"
                            android:hint="@string/prompt_email"
                            android:inputType="textVisiblePassword"
                            android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz1234567890*@#$%_-\\^.&amp;"
                            android:maxLines="1"
                            android:imeOptions="actionDone"
                            android:singleLine="true"/>

                </android.support.design.widget.TextInputLayout>

                <Button
                        android:id="@+id/send_otp_button"
                        style="@style/CustomMediumTextView"
                        android:gravity="center"
                        android:layout_gravity="center_horizontal"
                        android:textColor="@color/colorPrimary"
                        android:background="@null"
                        android:layout_marginTop="@dimen/activity_vertical_margin"
                        android:text="@string/send_otp"/>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</LinearLayout>