<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginLeft="@dimen/margin_16dp"
              android:layout_marginRight="@dimen/margin_16dp"
              android:layout_marginTop="@dimen/padding_8dp"
>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:orientation="horizontal"
            android:weightSum="1"
    >
        <LinearLayout
                android:id="@+id/ll_first"
                android:layout_weight=".1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <ImageView
                    android:id="@+id/imv_inbound"
                    android:layout_width="@dimen/imv_width"
                    android:layout_height="@dimen/imv_width"
                    android:layout_marginRight="@dimen/activity_vertical_margin_half"
                    android:adjustViewBounds="true"
                    android:src="@mipmap/ic_launcher"/>
            <View android:layout_width="1dp"
                  android:layout_height="match_parent"
                  android:background="@color/warm_grey"
                  android:layout_marginRight="@dimen/activity_vertical_margin_half"
            />
        </LinearLayout>
        <LinearLayout
                android:id="@+id/ll_second"
                android:layout_weight=".5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin_4dp"
                android:layout_toRightOf="@+id/ll_first"
                android:orientation="vertical"
        >

            <TextView
                    android:id="@+id/tv_time"
                    style="@style/CustomRegularTextView"
                    tools:text="2.14am - 4.25am"
                    android:layout_marginBottom="@dimen/margin_4dp"
                    android:maxLines="2"
            />
            <TextView
                    android:id="@+id/tv_destination"
                    style="@style/CustomSmallTextView"
                    tools:text="BOM-PNQ ,GoAir"
                    android:textColor="@color/cool_grey"
                    android:maxLines="2"
            />
        </LinearLayout>
        <LinearLayout
                android:layout_weight=".4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/ll_second"
                android:layout_alignParentRight="true"
                android:orientation="vertical"
        >

            <TextView
                    android:id="@+id/tv_duration"
                    style="@style/CustomRegularTextView"
                    android:gravity="end"
                    android:layout_width="match_parent"
                    android:textAlignment="viewEnd"
                    tools:text="2.hr 5min"
                    android:maxLines="2"
                    android:layout_marginBottom="@dimen/margin_4dp"
            />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1"
    >
        <LinearLayout
                android:id="@+id/ll2_first"
                android:layout_weight=".1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <ImageView
                    android:id="@+id/imv_out_bound"
                    android:layout_width="@dimen/imv_width"
                    android:layout_height="@dimen/imv_width"
                    android:layout_marginRight="@dimen/activity_vertical_margin_half"
                    android:adjustViewBounds="true"
                    android:src="@mipmap/ic_launcher"/>
            <View android:layout_width="1dp"
                  android:layout_height="match_parent"
                  android:background="@color/cool_grey"
                  android:layout_marginRight="@dimen/activity_vertical_margin_half"
            />
        </LinearLayout>
        <LinearLayout
                android:layout_weight=".5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin_4dp"
                android:layout_toRightOf="@+id/ll2_first"
                android:orientation="vertical"
        >

            <TextView
                    android:id="@+id/tv_out_bound_time"
                    style="@style/CustomRegularTextView"
                    tools:text="2.14am - 4.25am"
                    android:layout_marginBottom="@dimen/margin_4dp"
                    android:maxLines="2"
            />
            <TextView
                    android:id="@+id/tv_out_bound_destination"
                    style="@style/CustomSmallTextView"
                    tools:text="BOM-PNQ ,GoAir"
                    android:textColor="@color/cool_grey"
                    android:maxLines="2"
            />
        </LinearLayout>
        <LinearLayout
                android:layout_weight=".4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/ll_second"
                android:layout_alignParentRight="true"
                android:orientation="vertical"
        >

            <TextView
                    android:id="@+id/tv_out_bound_duration"
                    style="@style/CustomRegularTextView"
                    android:gravity="end"
                    android:layout_width="match_parent"
                    android:textAlignment="viewEnd"
                    android:text="2.hr 5min"
                    android:maxLines="2"
                    android:layout_marginBottom="@dimen/margin_4dp"
            />
        </LinearLayout>
    </LinearLayout>

    <TextView
            android:id="@+id/list_item"
            tools:text="$8,000 $"
            android:layout_gravity="end"
            android:textColor="@android:color/holo_blue_light"
            android:maxLines="2"
            style="@style/CustomRegularTextView"/>
    <View
            android:id="@+id/separator"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="@dimen/activity_vertical_margin_half"
            android:background="@color/white_grey"/>
</LinearLayout>