      android:hint="To"            android:ems="10"/>    <RelativeLayout android:layout_width="match_parent"                    android:layout_height="wrap_content"                    android:orientation="horizontal">        <LinearLayout                android:id="@+id/ll_buttons"                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:layout_centerVertical="true"                android:layout_alignParentLeft="true"                android:layout_marginRight="@dimen/margin_4dp"                android:orientation="horizontal"        >            <TextView                    android:id="@+id/tv_departure"                    style="@style/CustomRegularEditText"                    android:layout_width="0dp"                    android:layout_height="@dimen/margin_32"                    android:layout_weight=".45"                    android:drawableLeft="@drawable/ic_calender"                    android:drawablePadding="@dimen/margin_4dp"                    android:padding="@dimen/margin_4dp"                    android:layout_marginRight="@dimen/activity_vertical_margin"                    android:inputType="textPersonName"                    android:hint="Depart"                    android:ems="10"/>            <LinearLayout android:layout_width="wrap_content"                          android:layout_height="wrap_content"                          android:gravity="right"                          android:orientation="horizontal">                <ImageButton                        android:id="@+id/plus"                        style="?android:attr/buttonBarButtonStyle"                        android:layout_width="wrap_content"                        android:layout_height="@dimen/margin_32"                        app:srcCompat="@drawable/ic_plus"/>                <ImageButton                        android:id="@+id/minus"                        style="?android:attr/buttonBarButtonStyle"                        android:layout_width="wrap_content"                        android:layout_height="@dimen/margin_32"                        app:srcCompat="@drawable/ic_minus"/>            </LinearLayout>        </LinearLayout>    </RelativeLayout>    <LinearLayout android:layout_width="match_parent"                  android:layout_height="wrap_content"                  android:weightSum="2"                  android:orientation="horizontal"    >      <!--  <Button android:id="@+id/btn_passengers"                style="@style/CustomSmallTextView"                android:layout_width="@dimen/height_0dp"                android:layout_weight="1.1"                android:minHeight="@dimen/margin_32"                android:textAlignment="textStart"                android:text="@string/one_adult"                android:background="@null"                android:layout_alignParentLeft="true"                android:maxLines="2"                android:layout_centerVertical="true"                android:layout_marginRight="@dimen/margin_4dp"                android:textAllCaps="false"                android:textColor="@color/colorPrimary"                android:layout_gravity="start"/>        <LinearLayout android:layout_width="@dimen/height_0dp"                      android:layout_height="wrap_content"                      android:layout_weight=".9"                      android:weightSum="3"                      android:orientation="horizontal"                      android:gravity="center_vertical"                      android:layout_alignParentRight="true"                      android:layout_toRightOf="@+id/btn_passengers"        >            <Button                    android:id="@+id/btn_class"                    style="@style/CustomSmallTextView"                    android:minHeight="@dimen/margin_32"                    android:layout_width="@dimen/height_0dp"                    android:layout_weight="1.5"   