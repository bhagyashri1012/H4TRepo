<?xml version="1.0" encoding="utf-8"?><ScrollView        xmlns:android="http://schemas.android.com/apk/res/android"        xmlns:app="http://schemas.android.com/apk/res-auto"        android:layout_height="match_parent"        android:layout_width="match_parent"        android:paddingBottom="@dimen/activity_vertical_margin">    <LinearLayout            android:layout_height="match_parent"            android:layout_width="match_parent"            android:orientation="vertical">        <android.support.v7.widget.RecyclerView                android:id="@+id/recycler_view"                android:layout_width="match_parent"                android:layout_height="wrap_content"        />        <LinearLayout                android:id="@+id/ll_multicity_search"                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:layout_margin="@dimen/activity_vertical_margin_half"                android:weightSum="1"                android:orientation="horizontal"        >            <Button android:id="@+id/btn_passengers_multicity"                    style="@style/CustomSmallTextView"                    android:layout_width="@dimen/height_0dp"                    android:layout_weight=".6"                    android:minHeight="@dimen/margin_32"                    android:textAlignment="textStart"                    android:text="@string/one_adult"                    android:background="@null"                    android:layout_alignParentLeft="true"                    android:maxLines="2"                    android:layout_centerVertical="true"                    android:layout_marginRight="@dimen/margin_4dp"                    android:textAllCaps="false"                    android:textColor="@color/colorPrimary"                    android:layout_gravity="start"/>            <Button                    android:id="@+id/btn_class_multicity"                    style="@style/CustomSmallTextView"                    android:minHeight="@dimen/margin_32"                    android:layout_width="@dimen/height_0dp"                    android:layout_weight=".2"                    android:text="@string/default_class"                    android:layout_marginRight="@dimen/margin_2dp"                    android:background="@null"                    android:textAllCaps="false"                    android:textColor="@color/colorPrimary"            />            <ImageButton                    android:id="@+id/im_btn_search_multicity"                    android:layout_width="0dp"                    android:layout_height="@dimen/margin_32"                    style="@style/CustomButton"                    android:layout_weight=".2"                    android:layout_marginLeft="@dimen/margin_16dp"                    android:minWidth="35dp"                    android:layout_toRightOf="@+id/ll_buttons"                    android:layout_centerVertical="true"                    android:layout_alignParentRight="true"                    app:srcCompat="@drawable/ic_search"                    android:gravity="right"            />        </LinearLayout>    </LinearLayout></ScrollView>