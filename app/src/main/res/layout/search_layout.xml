<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginLeft="@dimen/activity_vertical_margin"
              android:layout_marginRight="@dimen/activity_vertical_margin"
              android:layout_marginTop="@dimen/activity_vertical_margin"
              android:orientation="vertical">

    <EditText
            android:id="@+id/edt_from"
            style="@style/CustomRegularEditText"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_32"
            android:drawablePadding="@dimen/margin_4dp"
            android:paddingLeft="@dimen/margin_4dp"
            android:focusableInTouchMode="true"
            android:maxHeight="@dimen/min_button_height"
            android:drawableLeft="@drawable/ic_from_city"
            android:layout_marginBottom="@dimen/activity_vertical_margin_half"
            android:inputType="textPersonName"
            android:hint="From"
            android:ems="10"/>
    <EditText
            android:id="@+id/edt_to"
            style="@style/CustomRegularEditText"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_32"
            android:drawableLeft="@drawable/ic_to_city"
            android:drawablePadding="@dimen/margin_4dp"
            android:paddingLeft="@dimen/margin_4dp"
            android:maxHeight="@dimen/min_button_height"
            android:layout_marginBottom="@dimen/activity_vertical_margin_half"
            android:inputType="textPersonName"
            android:hint="To"
            android:ems="10"/>
    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/activity_vertical_margin_half"
                    android:orientation="horizontal">
        <LinearLayout
                android:id="@+id/ll_buttons"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_marginRight="@dimen/margin_4dp"
                android:orientation="horizontal"
        >
            <TextView
                    android:id="@+id/tv_departure"
                    style="@style/CustomRegularEditText"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/margin_32"
                    android:layout_weight=".45"
                    android:drawableLeft="@drawable/ic_date_range_black_24dp"
                    android:drawablePadding="@dimen/margin_4dp"
                    android:padding="@dimen/margin_4dp"
                    android:layout_marginRight="@dimen/activity_vertical_margin_half"
                    android:inputType="textPersonName"
                    android:hint="Depart"
                    android:ems="10"/>
            <TextView
                    android:id="@+id/tv_return"
                    style="@style/CustomRegularEditText"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/margin_32"
                    android:layout_weight=".45"
                    android:drawableLeft="@drawable/ic_date_range_black_24dp"
                    android:drawablePadding="@dimen/margin_4dp"
                    android:padding="@dimen/margin_4dp"
                    android:layout_marginRight="@dimen/activity_vertical_margin_half"
                    android:inputType="textPersonName"
                    android:hint="Return"
                    android:ems="10"/>
            <ImageButton
                    android:id="@+id/im_btn_search"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/margin_32"
                    style="@style/CustomButton"
                    android:layout_weight=".15"
                    android:minWidth="35dp"
                    android:padding="@dimen/padding_8dp"
                    android:layout_toRightOf="@+id/ll_buttons"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    app:srcCompat="@drawable/ic_search"
                    android:gravity="right"
            />
        </LinearLayout>

    </RelativeLayout>
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:weightSum="2"
                  android:orientation="horizontal"
    >
        <Button android:id="@+id/btn_passengers"
                style="@style/CustomSmallTextView"
                android:layout_width="@dimen/height_0dp"
                android:layout_weight="1.1"
                android:minHeight="@dimen/margin_32"
                android:textAlignment="textStart"
                android:text="@string/one_adult"
                android:background="@null"
                android:layout_alignParentLeft="true"
                android:maxLines="2"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/margin_4dp"
                android:textAllCaps="false"
                android:textColor="@color/colorPrimary"
                android:layout_gravity="start"/>
        <LinearLayout android:layout_width="@dimen/height_0dp"
                      android:layout_height="wrap_content"
                      android:layout_weight=".9"
                      android:weightSum="3"
                      android:orientation="horizontal"
                      android:gravity="center_vertical"
                      android:layout_alignParentRight="true"
                      android:layout_toRightOf="@+id/btn_passengers"
        >
            <Button
                    android:id="@+id/btn_class"
                    style="@style/CustomSmallTextView"
                    android:minHeight="@dimen/margin_32"
                    android:layout_width="@dimen/height_0dp"
                    android:layout_weight="1.5"
                    android:text="@string/default_class"
                    android:layout_marginRight="@dimen/margin_2dp"
                    android:background="@null"
                    android:textAllCaps="false"
                    android:textColor="@color/colorPrimary"
            />
            <Button android:id="@+id/btn_sort"
                    style="@style/CustomSmallTextView"
                    android:minHeight="@dimen/margin_32"
                    android:layout_width="@dimen/height_0dp"
                    android:layout_weight=".7"
                    android:layout_toRightOf="@id/btn_class"
                    android:layout_marginRight="@dimen/margin_2dp"
                    android:text="@string/sort"
                    android:background="@null"
                    android:textAllCaps="false"
                    android:textColor="@color/colorPrimary"
            />

            <Button android:id="@+id/btn_filter"
                    style="@style/CustomSmallTextView"
                    android:minHeight="@dimen/margin_32"
                    android:layout_weight=".8"
                    android:layout_width="@dimen/height_0dp"
                    android:layout_toRightOf="@+id/btn_sort"
                    android:text="@string/filter"
                    android:textAllCaps="false"
                    android:layout_marginRight="@dimen/margin_2dp"
                    android:background="@null"
                    android:textColor="@color/colorPrimary"
            />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>