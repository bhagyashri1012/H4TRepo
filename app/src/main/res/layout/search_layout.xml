<?xml version="1.0" encoding="utf-8"?><LinearLayout        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:android="http://schemas.android.com/apk/res/android"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_marginLeft="@dimen/activity_vertical_margin_half"        android:layout_marginRight="@dimen/activity_vertical_margin_half"        android:layout_marginTop="@dimen/activity_vertical_margin_half"        android:orientation="vertical">    <EditText            android:id="@+id/edt_from"            style="@style/CustomRegularEditText"            android:layout_width="match_parent"            android:layout_height="@dimen/margin_32"            android:drawablePadding="@dimen/margin_4dp"            android:paddingStart="@dimen/margin_4dp"            android:paddingLeft="@dimen/margin_4dp"            android:editable="false"            android:focusable="false"            android:cursorVisible="false"            android:maxHeight="@dimen/min_button_height"            android:drawableLeft="@drawable/from_city"            android:drawableStart="@drawable/from_city"            android:layout_marginBottom="@dimen/activity_vertical_margin_half"            android:inputType="textPersonName"            android:hint="@string/from"            android:ems="10"/>    <EditText            android:id="@+id/edt_to"            style="@style/CustomRegularEditText"            android:layout_width="match_parent"            android:layout_height="@dimen/margin_32"            android:focusable="false"            android:editable="false"            android:cursorVisible="false"            android:drawableLeft="@drawable/to_city"            android:drawablePadding="@dimen/margin_4dp"            android:paddingLeft="@dimen/margin_4dp"            android:maxHeight="@dimen/min_button_height"            android:layout_marginBottom="@dimen/activity_vertical_margin_half"            android:inputType="textPersonName"            android:hint="To"            android:ems="10"/>    <RelativeLayout android:layout_width="match_parent"                    android:layout_height="wrap_content"                    android:layout_marginBottom="@dimen/activity_vertical_margin_half"                    android:orientation="horizontal">        <LinearLayout                android:id="@+id/ll_buttons"                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:layout_centerVertical="true"                android:layout_alignParentLeft="true"                android:layout_marginRight="@dimen/margin_4dp"                android:orientation="horizontal"        >            <TextView                    android:id="@+id/tv_departure"                    style="@style/CustomRegularEditText"                    android:layout_width="0dp"                    android:layout_height="@dimen/margin_32"                    android:layout_weight=".45"                    android:drawableLeft="@drawable/ic_calender"                    android:drawablePadding="@dimen/margin_4dp"                    android:padding="@dimen/margin_4dp"                    android:layout_marginRight="@dimen/activity_vertical_margin_half"                    android:inputType="textPersonName"                    android:hint="Depart"                    android:ems="10"/>            <TextView                    android:id="@+id/tv_return"                    style="@style/CustomRegularEditText"                    android:layout_width="0dp"                    android:layout_height="@dimen/margin_32"                    android:layout_weight=".45"                    android:drawableLeft="@drawable/ic_calender"                    android:drawablePadding="@dimen/margin_4dp"                    android:padding="@dimen/margin_4dp"                    android:layout_marginRight="@dimen/activity_vertical_margin_half"                    android:inputType="textPersonName"                    android:hint="Return"                    android:ems="10"/>            <ImageButton                    android:id="@+id/im_btn_search"                    android:layout_width="0dp"                    android:layout_height="@dimen/margin_32"                    style="@style/CustomButton"                    android:layout_weight=".15"                    android:minWidth="35dp"                    android:padding="@dimen/padding_8dp"                    android:layout_toRightOf="@+id/ll_buttons"                    android:layout_centerVertical="true"                    android:layout_alignParentRight="true"                    app:srcCompat="@drawable/ic_search"                    android:gravity="right"            />        </LinearLayout>    </RelativeLayout>    <LinearLayout android:layout_width="match_parent"                  android:layout_height="wrap_content"                  android:weightSum="2"                  android:orientation="horizontal"    >        <LinearLayout android:layout_width="0dp"                      android:layout_height="wrap_content"                      android:layout_weight="1.4"                      android:orientation="horizontal"        >            <TextView android:id="@+id/btn_passengers"                      style="@style/CustomSmallTextView"                      android:layout_width="wrap_content"                      android:minHeight="@dimen/margin_32"                      android:text="one_adult"                      android:background="@null"                      android:gravity="center"                      android:textAllCaps="false"                      android:textStyle="bold"                      android:textColor="@color/colorPrimary"                      android:layout_gravity="start"/>            <TextView                    android:id="@+id/tv_class"                    style="@style/CustomSmallTextView"                    android:minHeight="@dimen/margin_32"                    android:layout_width="wrap_content"                    android:text="@string/default_class"                    android:layout_marginRight="@dimen/margin_2dp"                    android:layout_marginLeft="@dimen/margin_2dp"                    android:background="@null"                    android:gravity="center"                    android:textStyle="bold"                    android:textAllCaps="false"                    android:textColor="@color/colorPrimary"            />        </LinearLayout>        <LinearLayout android:layout_width="0dp"                      android:layout_height="wrap_content"                      android:orientation="horizontal"                      android:gravity="center_vertical"                      android:layout_weight=".6"                      android:layout_alignParentRight="true"                      android:layout_toRightOf="@+id/btn_passengers"        >            <!--  <Button                      android:id="@+id/btn_class"                      style="@style/CustomSmallTextView"                      android:minHeight="@dimen/margin_32"                      android:layout_width="@dimen/height_0dp"                      android:layout_weight="1.5"                      android:text="@string/default_class"                      android:layout_marginRight="@dimen/margin_2dp"                      android:background="@null"                      android:textAllCaps="false"                      android:clickable="false"                      android:visibility="invisible"                      android:textColor="@color/colorPrimary"              />-->            <Button android:id="@+id/btn_sort"                    style="@style/CustomSmallTextView"                    android:minHeight="@dimen/margin_32"                    android:layout_width="0dp"                    android:layout_weight="1"                    android:layout_toRightOf="@id/tv_class"                    android:layout_marginRight="@dimen/margin_2dp"                    android:text="@string/sort"                    android:textStyle="bold"                    android:background="@null"                    android:textAllCaps="false"                    android:textColor="@color/colorPriTint"            />            <Button android:id="@+id/btn_filter"                    style="@style/CustomSmallTextView"                    android:minHeight="@dimen/margin_32"                    android:layout_width="0dp"                    android:layout_weight="1"                    android:layout_toRightOf="@+id/btn_sort"                    android:text="@string/filter"                    android:textStyle="bold"                    android:textAllCaps="false"                    android:layout_marginRight="@dimen/margin_2dp"                    android:textColor="@color/colorPriTint"                    android:background="@null"            />        </LinearLayout>    </LinearLayout></LinearLayout>