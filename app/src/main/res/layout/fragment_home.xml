<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true"
            android:fadingEdge="none"
            android:scrollbars="none"
            android:overScrollMode="never"
            android:background="@drawable/home_bg"
>
    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="@dimen/activity_vertical_margin">
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_margin="@dimen/activity_vertical_margin"
                      android:orientation="vertical">

            <RelativeLayout android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/activity_vertical_margin">

                <ImageView
                        android:id="@+id/imv_settings"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/ic_settings"
                        android:layout_alignParentRight="true"/>

                <ImageView android:layout_width="150dp"
                           android:layout_height="120dp"
                           android:layout_centerInParent="true"
                           android:layout_below="@+id/imv_settings"
                           android:src="@drawable/splash"/>
            </RelativeLayout>
            <RelativeLayout android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                <LinearLayout
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:weightSum="4">
                    <LinearLayout android:id="@+id/ll_flight"
                                  android:layout_width="@dimen/height_0dp"
                                  android:layout_height="wrap_content"
                                  android:layout_marginRight="@dimen/activity_vertical_margin_half"
                                  android:layout_weight="1"
                                  android:orientation="vertical">
                        <ImageView
                                android:id="@+id/imv_flight"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/icon_height_img"
                                app:srcCompat="@drawable/flight"
                                android:layout_alignParentRight="true"/>
                        <TextView
                                style="@style/CustomRegularTextView"
                                android:text="@string/flight"
                                android:layout_gravity="center"
                                android:textColor="@color/white"
                                android:layout_marginBottom="@dimen/activity_vertical_margin"/>
                    </LinearLayout>
                    <LinearLayout android:layout_width="@dimen/height_0dp"
                                  android:layout_height="wrap_content"
                                  android:layout_marginRight="@dimen/activity_vertical_margin_half"
                                  android:layout_weight="1"
                                  android:orientation="vertical">
                        <ImageView
                                android:id="@+id/imv_hotels"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/icon_height_img"
                                app:srcCompat="@drawable/hotel"
                                android:layout_alignParentRight="true"/>
                        <TextView
                                style="@style/CustomRegularTextView"
                                android:text="@string/hotels"
                                android:layout_gravity="center"
                                android:textColor="@color/white"
                                android:layout_marginBottom="@dimen/activity_vertical_margin"/>
                    </LinearLayout>

                    <LinearLayout android:layout_width="@dimen/height_0dp"
                                  android:layout_height="wrap_content"
                                  android:layout_marginRight="@dimen/activity_vertical_margin_half"

                                  android:layout_weight="1"
                                  android:orientation="vertical">
                        <ImageView
                                android:id="@+id/imv_sports"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/icon_height_img"
                                app:srcCompat="@drawable/sport"
                                android:layout_alignParentRight="true"
                        />
                        <TextView
                                style="@style/CustomRegularTextView"
                                android:text="@string/sports"
                                android:layout_gravity="center"
                                android:textColor="@color/white"
                                android:layout_marginBottom="@dimen/activity_vertical_margin"/>
                    </LinearLayout>
                    <LinearLayout android:layout_width="@dimen/height_0dp"
                                  android:layout_height="wrap_content"
                                  android:layout_weight="1"
                                  android:orientation="vertical">
                        <ImageView
                                android:id="@+id/imv_events"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/icon_height_img"
                                app:srcCompat="@drawable/event"
                                android:layout_alignParentRight="true"
                        />
                        <TextView
                                style="@style/CustomRegularTextView"
                                android:text="@string/events"
                                android:layout_gravity="center"
                                android:textColor="@color/white"
                                android:layout_marginBottom="@dimen/activity_vertical_margin"/>
                    </LinearLayout>
                </LinearLayout>

            </RelativeLayout>
            <TextView
                    style="@style/CustomLargeTextView"
                    android:text="@string/hot_deals"
                    android:textColor="@color/white"
                    android:layout_marginBottom="@dimen/activity_vertical_margin"
            />

            <com.takusemba.multisnaprecyclerview.MultiSnapRecyclerView
                    android:id="@+id/recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:animateLayoutChanges="false"
                    android:nestedScrollingEnabled="false"
                    android:layout_gravity="center_vertical"
                    android:layout_marginBottom="60dp"
                    android:orientation="horizontal"
                    app:msrv_gravity="center"
                    app:msrv_ms_per_inch="100"
                    app:msrv_snap_count="2"/>
        </LinearLayout>

        <FrameLayout
                android:id="@+id/frame_layout_settings"
                android:layout_marginLeft="100dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/navigation"
                android:animateLayoutChanges="false"
                android:layout_alignParentRight="true"
        />
    </RelativeLayout>
</ScrollView>
