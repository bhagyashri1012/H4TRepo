<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:id="@+id/container_account_info"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="@drawable/home_bg"
             tools:context="com.usit.hub4tickets.dashboard.ui.AccountFragment">
    <ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fillViewport="true"
                android:fadingEdge="none"
                android:scrollbars="none"
                android:overScrollMode="never"
                android:background="@drawable/home_bg"
    >
        <RelativeLayout android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginBottom="@dimen/activity_vertical_margin">

            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="match_parent"
                          android:layout_margin="@dimen/activity_vertical_margin"
                          android:orientation="vertical"
                          android:weightSum="3">
                <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/activity_vertical_margin"
                        app:cardBackgroundColor="@android:color/white"
                        app:cardCornerRadius="@dimen/corner_radius"
                        app:cardMaxElevation="@dimen/max_elevation"
                        app:cardElevation="0.7dp"
                        app:contentPadding="@dimen/content_padding"
                        app:contentPaddingBottom="0dp"
                        app:cardPreventCornerOverlap="true"
                        app:cardUseCompatPadding="true">
                    <LinearLayout android:layout_width="match_parent"
                                  android:layout_height="wrap_content"
                                  android:orientation="vertical"
                                  android:layout_margin="@dimen/activity_vertical_margin">
                        <TextView
                                android:id="@+id/link_login"
                                style="@style/CustomLargeTextView"
                                android:text="@string/login"
                                android:padding="@dimen/margin_4dp"
                                android:textColor="@color/colorPrimary"
                                android:layout_marginBottom="@dimen/activity_vertical_margin"/>
                        <RelativeLayout android:id="@+id/rl_my_acc_info"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content">
                            <TextView
                                    android:id="@+id/link_log_out"
                                    style="@style/CustomLargeTextView"
                                    android:text="@string/logout"
                                    android:textColor="@color/colorPrimary"
                                    android:layout_alignParentRight="true"
                                    android:padding="@dimen/margin_4dp"
                                    android:layout_marginBottom="@dimen/activity_vertical_margin"/>
                            <TextView
                                    android:id="@+id/link_account_info"
                                    style="@style/CustomLargeTextView"
                                    android:text="@string/my_account_info"
                                    android:padding="@dimen/margin_4dp"
                                    android:textColor="@color/colorPrimary"
                                    android:layout_marginBottom="@dimen/activity_vertical_margin"/>
                        </RelativeLayout>
                    </LinearLayout>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/activity_vertical_margin"
                        app:cardBackgroundColor="@android:color/white"
                        app:cardCornerRadius="@dimen/corner_radius"
                        app:cardMaxElevation="@dimen/max_elevation"
                        app:cardElevation="0.7dp"
                        app:contentPadding="@dimen/content_padding"
                        app:contentPaddingBottom="0dp"
                        app:cardPreventCornerOverlap="true"
                        app:cardUseCompatPadding="true">
                    <LinearLayout android:layout_width="match_parent"
                                  android:layout_height="wrap_content"
                                  android:orientation="vertical"
                                  android:layout_margin="@dimen/activity_vertical_margin">
                        <TextView
                                style="@style/CustomLargeBoldTextView"
                                android:text="Settings"
                                android:layout_marginBottom="@dimen/activity_vertical_margin"/>
                        <RelativeLayout android:layout_width="match_parent"
                                        android:layout_height="wrap_content">
                            <TextView
                                    android:id="@+id/tv_country"
                                    style="@style/CustomRegularTextView"
                                    android:text="@string/country_region"
                                    android:layout_marginRight="@dimen/activity_vertical_margin_half"
                                    android:layout_marginBottom="@dimen/activity_vertical_margin"/>
                            <TextView
                                    android:id="@+id/tv_country_name"
                                    style="@style/CustomRegularTextView"
                                    tools:text="India"
                                    android:layout_toRightOf="@+id/tv_country"
                                    android:layout_marginBottom="@dimen/activity_vertical_margin"/>
                        </RelativeLayout>
                        <RelativeLayout android:layout_width="match_parent"
                                        android:layout_height="wrap_content">
                            <TextView
                                    android:id="@+id/tv_lang"
                                    style="@style/CustomRegularTextView"
                                    android:text="@string/language"
                                    android:layout_marginRight="@dimen/activity_vertical_margin_half"
                                    android:layout_marginBottom="@dimen/activity_vertical_margin"/>
                            <TextView
                                    android:id="@+id/tv_lang_name"
                                    style="@style/CustomRegularTextView"
                                    tools:text="Marathi"
                                    android:layout_toRightOf="@+id/tv_lang"
                                    android:layout_marginBottom="@dimen/activity_vertical_margin"/>
                        </RelativeLayout>
                        <RelativeLayout android:layout_width="match_parent"
                                        android:layout_height="wrap_content">
                            <TextView
                                    android:id="@+id/tv_currency"
                                    style="@style/CustomRegularTextView"
                                    android:text="Country / Region :"
                                    android:layout_marginRight="@dimen/activity_vertical_margin_half"
                                    android:layout_marginBottom="@dimen/activity_vertical_margin"/>
                            <TextView
                                    android:id="@+id/tv_currency_name"
                                    style="@style/CustomRegularTextView"
                                    tools:text="INR"
                                    android:layout_toRightOf="@+id/tv_currency"
                                    android:layout_marginBottom="@dimen/activity_vertical_margin"/>
                        </RelativeLayout>
                    </LinearLayout>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="@android:color/white"
                        app:cardCornerRadius="@dimen/corner_radius"
                        app:cardMaxElevation="@dimen/max_elevation"
                        app:cardElevation="0.7dp"
                        app:contentPadding="@dimen/content_padding"
                        app:contentPaddingBottom="0dp"
                        app:cardPreventCornerOverlap="true"
                        app:cardUseCompatPadding="true">
                    <LinearLayout android:layout_width="match_parent"
                                  android:layout_height="wrap_content"
                                  android:orientation="vertical"
                                  android:layout_margin="@dimen/activity_vertical_margin_half">
                        <TextView
                                android:id="@+id/link_my_alerts"
                                style="@style/CustomLargeTextView"
                                android:text="@string/my_alerts"
                                android:textColor="@color/colorPrimary"
                                android:layout_marginBottom="@dimen/activity_vertical_margin"/>
                        <TextView
                                android:id="@+id/link_my_history"
                                style="@style/CustomLargeTextView"
                                android:text="@string/my_history"
                                android:textColor="@color/colorPrimary"
                                android:layout_marginBottom="@dimen/activity_vertical_margin"/>
                        <TextView
                                android:id="@+id/link_clear_history"
                                style="@style/CustomLargeTextView"
                                android:text="@string/clear_history"
                                android:textColor="@color/colorPrimary"
                                android:layout_marginBottom="@dimen/activity_vertical_margin"/>
                    </LinearLayout>
                </android.support.v7.widget.CardView>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</FrameLayout>
