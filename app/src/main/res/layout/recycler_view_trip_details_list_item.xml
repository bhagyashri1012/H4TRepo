<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_margin="@dimen/activity_vertical_margin">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_16dp"
            android:orientation="horizontal"
    >

        <TextView style="@style/CustomRegularTextView"
                  android:layout_weight="1"
                  android:text="Pune - Mumbai"
                  android:layout_marginBottom="@dimen/margin_4dp"
                  android:maxLines="2"
        />
        <TextView style="@style/CustomRegularTextView"
                  android:text="Thursday 16 Nov"
                  android:maxLines="2"
                  android:layout_weight="1"
                  android:textAlignment="viewEnd"
                  android:gravity="right|end"
        />
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"
                  android:background="@drawable/grey_border"
                  android:orientation="vertical"
                  android:padding="@dimen/activity_vertical_margin">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/activity_vertical_margin_half"
                android:orientation="horizontal"
                android:weightSum="1"
        >

            <LinearLayout
                    android:id="@+id/ll_second"
                    android:layout_weight=".5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/margin_4dp"
                    android:orientation="vertical"
            >

                <TextView style="@style/CustomRegularTextView"
                          android:text="2.14am - 4.25am"
                          android:layout_marginBottom="@dimen/margin_4dp"
                          android:maxLines="2"
                />
                <TextView style="@style/CustomRegularTextView"
                          android:text="BOM-PNQ ,GoAir"
                          android:textColor="@color/cool_grey"
                          android:maxLines="2"
                />
            </LinearLayout>
            <LinearLayout
                    android:layout_weight=".5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:orientation="vertical"
            >

                <TextView style="@style/CustomRegularTextView"
                          android:gravity="end"
                          android:layout_width="match_parent"
                          android:textAlignment="viewEnd"
                          android:text="2.hr 5min"
                          android:maxLines="2"
                          android:layout_marginBottom="@dimen/margin_4dp"
                />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1"
        >

            <LinearLayout
                    android:layout_weight=".5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/margin_4dp"
                    android:orientation="vertical"
            >

                <TextView style="@style/CustomRegularTextView"
                          android:text="2.14am - 4.25am"
                          android:layout_marginBottom="@dimen/margin_4dp"
                          android:maxLines="2"
                />
                <TextView style="@style/CustomRegularTextView"
                          android:text="BOM-PNQ ,GoAir"
                          android:textColor="@color/cool_grey"
                          android:maxLines="2"
                />
            </LinearLayout>
            <LinearLayout
                    android:layout_weight=".5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/ll_second"
                    android:layout_alignParentRight="true"
                    android:orientation="vertical"
            >

                <TextView style="@style/CustomRegularTextView"
                          android:gravity="end"
                          android:layout_width="match_parent"
                          android:textAlignment="viewEnd"
                          android:text="2.hr 5min"
                          android:maxLines="2"
                          android:layout_marginBottom="@dimen/margin_4dp"
                />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
        >
            <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content">
                <ImageView android:layout_width="25dp" android:layout_height="25dp"
                           android:src="@drawable/flight"/>
                <ImageView android:layout_width="25dp" android:layout_height="25dp"
                           android:src="@drawable/flight"/>
                <ImageView android:layout_width="25dp" android:layout_height="25dp"
                           android:src="@drawable/flight"/>
                <ImageView android:layout_width="25dp" android:layout_height="25dp"
                           android:src="@drawable/flight"/>
            </LinearLayout>
            <TextView
                    android:id="@+id/list_item"
                    android:text="@string/see_details"
                    android:layout_gravity="end"
                    android:textColor="@android:color/holo_blue_light"
                    android:maxLines="2"
                    android:gravity="end|right"
                    android:textAlignment="viewEnd"
                    android:layout_weight="1"
                    style="@style/CustomRegularTextView"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>