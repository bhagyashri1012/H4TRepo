<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginRight="@dimen/activity_vertical_margin"
              android:layout_marginLeft="@dimen/activity_vertical_margin"
              android:layout_marginTop="@dimen/activity_vertical_margin">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_vertical_margin_half"
            android:orientation="horizontal"
    >

        <TextView android:id="@+id/trip_title"
                  style="@style/CustomRegularTextView"
                  android:layout_weight="1"
                  android:text="Pune - Mumbai"
                  android:textStyle="bold"
                  android:layout_marginBottom="@dimen/margin_4dp"
                  android:maxLines="2"
        />
        <TextView android:id="@+id/trip_date"
                  style="@style/CustomRegularTextView"
                  android:text="Thursday 16 Nov"
                  android:textStyle="bold"
                  android:maxLines="2"
                  android:layout_weight="1"
                  android:textAlignment="viewEnd"
                  android:gravity="right|end"
        />
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"
                  android:background="@drawable/grey_border"
                  android:orientation="vertical"
                  android:padding="@dimen/activity_vertical_margin_half">
        <LinearLayout
                android:id="@+id/ll_main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/activity_vertical_margin_half"
                android:orientation="horizontal"
                android:weightSum="1"
        >

            <LinearLayout
                    android:layout_weight=".5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/margin_4dp"
                    android:orientation="vertical"
            >

                <TextView android:id="@+id/tv_destination"
                          style="@style/CustomRegularTextView"
                          android:layout_marginBottom="@dimen/activity_vertical_margin_half"
                          android:text="BOM-PNQ "
                          android:maxLines="2"
                />
                <TextView android:id="@+id/tv_airline"
                          style="@style/CustomSmallTextView"
                          android:text="Spice jet"
                          android:maxLines="2"
                />
            </LinearLayout>

            <LinearLayout
                    android:layout_weight=".5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:orientation="vertical"
            >

                <TextView android:id="@+id/tv_time"
                          style="@style/CustomSmallTextView"
                          android:text="2.14am - 4.25am"
                          android:textAlignment="viewEnd"
                          android:layout_marginBottom="@dimen/activity_vertical_margin_half"
                          android:maxLines="2"
                          android:layout_gravity="end"/>
                <TextView
                        android:id="@+id/stop_count"
                        tools:text="1 stop"
                        android:layout_gravity="end|bottom"
                        android:maxLines="1"
                        android:gravity="end|right"
                        android:textAlignment="viewEnd"
                        android:layout_weight="1"
                        android:textColor="@color/slate_grey"
                        android:layout_marginBottom="@dimen/margin_2dp"
                        style="@style/CustomRegularTextView"/>
                <!--<TextView
                        android:id="@+id/tv_duration"
                        style="@style/CustomSmallTextView"
                        android:gravity="end"
                        android:layout_width="match_parent"
                        android:textAlignment="viewEnd"
                        android:text="(2.hr 5min)"
                        android:maxLines="2"
                        android:layout_marginBottom="@dimen/margin_4dp"
                />-->
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
        >
            <LinearLayout android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:padding="@dimen/margin_4dp"
                          android:gravity="center_vertical"
                          android:layout_gravity="center_vertical"
                          android:background="@drawable/grey_border"
            >
                <ImageView
                        android:id="@+id/imv_firstStop"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:paddingRight="@dimen/margin_4dp"
                        app:srcCompat="@drawable/ic_from_city"/>
                <TextView
                        android:id="@+id/txt_from_city"
                        style="@style/CustomSmallTextView"
                        tools:text="HYD 3h 5m"
                        android:layout_marginTop="@dimen/margin_4dp"
                        android:layout_marginBottom="@dimen/margin_4dp"
                        android:gravity="center_vertical"
                />

            </LinearLayout>
            <View android:id="@+id/line"
                  style="@style/Divider"
                  android:layout_gravity="center_vertical"
                  android:layout_weight="1"
                  android:layout_width="@dimen/imv_width"
                  android:background="@color/slate_grey"
            />
            <LinearLayout android:layout_width="wrap_content"
                          android:layout_height="match_parent"
                          android:padding="@dimen/margin_4dp"
                          android:gravity="center_vertical"
                          android:background="@drawable/grey_border"
            >
                <TextView
                        android:id="@+id/tv_stop_duration"
                        style="@style/CustomSmallTextView"
                        tools:text="3h 5m"
                        android:layout_marginTop="@dimen/margin_4dp"
                        android:layout_marginBottom="@dimen/margin_4dp"
                        android:gravity="center_vertical"
                />

            </LinearLayout>
            <View android:id="@+id/line2"
                  style="@style/Divider"
                  android:layout_gravity="center_vertical"
                  android:layout_weight="1"
                  android:layout_width="@dimen/imv_width"
                  android:background="@color/slate_grey"
            />
            <LinearLayout android:layout_width="wrap_content"
                          android:layout_height="match_parent"
                          android:padding="@dimen/margin_4dp"
                          android:gravity="center_vertical"
                          android:background="@drawable/grey_border"
            >
                <ImageView
                        android:id="@+id/imv_lastStop"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:paddingRight="@dimen/margin_4dp"
                        app:srcCompat="@drawable/ic_to_city"/>
                <TextView
                        android:id="@+id/txt_to_city"
                        style="@style/CustomSmallTextView"
                        tools:text="HYD 3h 5m"
                        android:layout_marginTop="@dimen/margin_4dp"
                        android:layout_marginBottom="@dimen/margin_4dp"
                        android:gravity="center_vertical"
                />
            </LinearLayout>
        </LinearLayout>

        <!--   <android.support.v7.widget.RecyclerView
                   android:id="@+id/recycler_view_stop_details"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal"
                   android:focusableInTouchMode="false"
                   android:nestedScrollingEnabled="false"/>-->
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_8dp"
                android:orientation="vertical"
        >


            <TextView
                    android:id="@+id/action_see_details"
                    android:text="@string/see_details"
                    android:layout_gravity="end|bottom"
                    android:maxLines="1"
                    android:gravity="end|right"
                    android:textAlignment="viewEnd"
                    android:layout_weight="1"
                    android:textColor="@color/colorPrimary"
                    style="@style/CustomRegularTextView"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>